#!/usr/bin/env node
var colors = require('colors'),
    mgit = require('../');

// Output usage if we are missing the operation.
if (process.argv.length < 3) {
  console.log('');
  console.log('Usage:');
  console.log('  mgit <command> <flags>'.bold);
  console.log('');
  console.log('Commands:');
  console.log('  status'.bold + '    Shows the status of git repos in the CWD');
  console.log('  pull'.bold + '      Fetch and rebase each ' + 'clean'.bold + ' repo in the CWD');
  console.log('  checkout'.bold + '  Checks out the named branch on each repo in the CWD')
  console.log('');
  console.log('Flags:');
  console.log('      -v'.bold + '  Verbose.  Show detailed information.');
  console.log('      -b'.bold + '  Branch.  Show the currently checked out branch.');
  console.log('');
  return;
}

// Execute the command if it exists.
if (mgit.commands[process.argv[2]]) {
  mgit.commands[process.argv[2]]();
  return;
}
else {
  console.log('[Error: The command ' + process.argv[2].bold + ' does not exist.]');
  return;
}
